    "prepublishOnly": "pnpm build",
    "save-plugin": "bun build ./src/plugin.ts --outfile ~/.config/opencode/plugin/kimaki.js --target bun --format esm",
    "kimaki": "tsx bin.js",
    "play": "tsx src/bin.ts",
    "play:prod": "node bin.js",
    "watch": "tsc -w",
    "test": "vitest"
  },
  "bin": "./bin.js",
